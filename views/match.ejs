<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <link rel="stylesheet" href="css/welcome.css">
  <title>Match Details</title>
</head>

<body>
  <%match.forEach(function(item, index) {%>
  <%var counter = 0%>
  <%opponent.forEach(function(opp, index) {%>
  <%  if(opp.player_id==item.player_id_1 || opp.player_id==item.player_id_2) {%>
  <%counter = index%>
  <%  }%>
  <% }) %>
  <div class="match-div container d-flex justify-content-center" style="margin-top:50px">
    <h2><span style="color: #a20a0a">Match <%=index+1%> </span>started at <%=item.match_start_datetime%> and ended at: <%=item.match_end_datetime%></h2>
  </div>

  <%if(item.player_id == item.winner_id) {%>

  <div class="match-div container d-flex justify-content-center">
    <h2><%=item.first_name%> <%=item.last_name%> has <span style="color: #1989ac">won</span> the match against <%=opponent[counter].first_name%> <%=opponent[counter].last_name%>!</h2>
  </div>

  <% } else { %>

  <div class="match-div container d-flex justify-content-center">
    <h2><%=item.first_name%> <%=item.last_name%> has <span style="color: #aa8976">lost</span> the match against <%=opponent[counter].first_name%> <%=opponent[counter].last_name%>.</h2>
  </div>
  <%  } %>
  <div class="match-detail-div container d-flex justify-content-center">
    <h5>Moves that had been performed were: </h5>
  </div>
  <%var str = item.move_description.split("\r\n")%>
  <%for (let i = 0; i < str.length; i++) { %>
  <div class="match-detail-div container d-flex justify-content-center">
      <p><%=str[i]%><br></p>
  </div>
  <%}%>
  <% }) %>

</body>

</html>
